<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Nút chuyển ngày -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="60dp">

            <ImageButton
                android:id="@+id/btnPrevDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/chevron_left"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Ngày trước"/>

            <!-- Khoảng cách trước TextView -->
            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/txtDayInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hôm nay"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <!-- Khoảng cách sau TextView -->
            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/btnNextDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/chevron_right"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Ngày sau"/>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/flCircle"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center">

            <!-- Vòng tròn nền -->
            <ImageView
                android:id="@+id/imgCircle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/circle_progress"
                android:contentDescription="Vòng tròn bước chân"/>

            <!-- Container icon + TextView -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center">

                <!-- Icon ở trên -->
                <ImageView
                    android:id="@+id/imgCenterIcon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/buocchan"
                    android:contentDescription="Icon"
                    android:layout_marginBottom="4dp"/>

                <!-- Text trên icon (nằm ngay dưới icon) -->
                <TextView
                    android:id="@+id/txtCenterTop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="4dp"/>

                <!-- Text dưới icon -->
                <TextView
                    android:id="@+id/txtCenterBottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bước"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

            </LinearLayout>

        </FrameLayout>

        <!-- Các ô nhỏ: bước, calo, quãng đường, thời gian -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="40dp">

            <!-- Bước -->
            <TextView
                android:id="@+id/txtSmallSteps"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="0\nbước"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/card_bg"
                android:drawableTop="@drawable/vector"
                android:drawablePadding="4dp"/>

            <!-- Calo -->
            <TextView
                android:id="@+id/txtSmallCalories"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="0\nkcal"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginStart="8dp"
                android:background="@drawable/card_bg"
                android:drawableTop="@drawable/mdi_fire"
                android:drawablePadding="4dp"/>

            <!-- Quãng đường -->
            <TextView
                android:id="@+id/txtSmallDistance"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="0\nm"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:background="@drawable/card_bg"
                android:drawableTop="@drawable/arrow_right"
                android:drawablePadding="4dp"/>

            <!-- Thời gian -->
            <TextView
                android:id="@+id/txtSmallTime"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="0\nphút"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginStart="8dp"
                android:background="@drawable/card_bg"
                android:drawableTop="@drawable/mdi_light_clock"
                android:drawablePadding="4dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
