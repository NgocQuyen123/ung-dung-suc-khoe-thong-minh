<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="8dp">

    <!-- Thời gian -->
    <TextView
        android:id="@+id/tvTime"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="07:00 AM"
        android:textSize="14sp"
        android:textColor="@color/gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Card thông tin bài tập -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardSchedule"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:visibility="visible"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:layout_constraintStart_toEndOf="@id/tvTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@drawable/bg_gradient_purple">

            <!-- Tên bài tập -->
            <TextView
                android:id="@+id/tvWorkoutName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ab Workout, 7:30am"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <!-- Tiến độ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="6dp"
                    android:layout_weight="1"
                    android:progress="65"
                    android:progressDrawable="@drawable/progress_gradient"
                    android:max="100"/>

                <TextView
                    android:id="@+id/tvProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="65%"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"/>

            </LinearLayout>

            <!-- Nút hành động -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="12dp">

                <Button
                    android:id="@+id/btnEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Chỉnh sửa"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_button_outline_white"
                    android:paddingHorizontal="16dp"
                    android:layout_marginEnd="8dp"
                    style="?android:attr/borderlessButtonStyle"/>

                <Button
                    android:id="@+id/btnMarkDone"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Đánh dấu hoàn thành"
                    android:textSize="12sp"
                    android:textColor="@color/purple_gradient_start"
                    android:background="@drawable/bg_button_white"
                    android:paddingHorizontal="16dp"
                    style="?android:attr/borderlessButtonStyle"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>