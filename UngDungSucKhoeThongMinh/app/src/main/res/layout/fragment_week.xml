<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Nút chuyển ngày -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="25dp">

            <ImageButton
                android:id="@+id/btnPrevDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/chevron_left"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Ngày trước"/>

            <!-- Khoảng cách trước TextView -->
            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <!-- TextView hiển thị số ngày trước -->
            <TextView
                android:id="@+id/txtDayInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hôm nay"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"/>

            <!-- Khoảng cách sau TextView -->
            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/btnNextDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/chevron_right"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Ngày sau"/>
        </LinearLayout>

        <!-- Tiêu đề tổng -->
        <TextView
            android:text="TỔNG HÀNG TUẦN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#999999"
            android:layout_marginTop="8dp" />

        <!-- Tổng bước + trung bình -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <!-- Phần bên trái -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start">

                <TextView
                    android:id="@+id/txtTotalSteps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="439"
                    android:textSize="34sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtStepsLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="bước"
                    android:textSize="16sp"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>

            <!-- Phần bên phải -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/txtAverage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trung bình 439"
                    android:textSize="14sp"
                    android:layout_marginEnd="6dp" />

                <ImageView
                    android:src="@drawable/arrow_down"
                    android:layout_width="16dp"
                    android:layout_height="16dp" />
            </LinearLayout>
        </LinearLayout>


        <!-- Ngày tháng -->
        <TextView
            android:id="@+id/txtWeekRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tháng 9 22-9"
            android:textSize="14sp"
            android:textColor="#A0A0A0"
            android:layout_marginTop="6dp" />

        <!-- Biểu đồ 7 cột -->
        <LinearLayout
            android:id="@+id/chartWeek"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:weightSum="7"
            android:gravity="bottom"
            android:layout_marginTop="16dp">

            <!-- Cột mẫu (copy 7 lần) -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <View
                    android:id="@+id/bar1"
                    android:layout_gravity="bottom"
                    android:layout_width="24dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/bar_bg" />

                <TextView
                    android:id="@+id/bar1Value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="439"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="bottom|center_horizontal" />
            </FrameLayout>

            <!-- 6 cột còn lại -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <View
                    android:id="@+id/bar2"
                    android:layout_width="24dp"
                    android:layout_height="20dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/bar_bg" />
                <TextView
                    android:id="@+id/bar2Value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="_"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="bottom|center_horizontal" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <View
                    android:id="@+id/bar3"
                    android:layout_width="24dp"
                    android:layout_height="20dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/bar_bg" />
                <TextView
                    android:id="@+id/bar3Value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="_"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="bottom|center_horizontal" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <View
                    android:id="@+id/bar4"
                    android:layout_width="24dp"
                    android:layout_height="20dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/bar_bg" />
                <TextView
                    android:id="@+id/bar4Value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="_"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="bottom|center_horizontal" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <View
                    android:id="@+id/bar5"
                    android:layout_width="24dp"
                    android:layout_height="20dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/bar_bg" />
                <TextView
                    android:id="@+id/bar5Value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="_"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="bottom|center_horizontal" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <View
                    android:id="@+id/bar6"
                    android:layout_width="24dp"
                    android:layout_height="20dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/bar_bg" />
                <TextView
                    android:id="@+id/bar6Value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="_"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="bottom|center_horizontal" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <View
                    android:id="@+id/bar7"
                    android:layout_width="24dp"
                    android:layout_height="20dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/bar_bg" />
                <TextView
                    android:id="@+id/bar7Value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="_"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="bottom|center_horizontal" />
            </FrameLayout>

        </LinearLayout>

        <!-- 4 ô thông tin -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/infoSteps"
                android:text="439\nbước"
                android:gravity="center"
                android:textSize="14sp"
                android:background="@drawable/info_selected"
                android:layout_width="80dp"
                android:layout_height="80dp" />

            <TextView
                android:id="@+id/infoCalories"
                android:text="13\nkcal"
                android:gravity="center"
                android:textSize="14sp"
                android:background="@drawable/info_default"
                android:layout_marginStart="10dp"
                android:layout_width="80dp"
                android:layout_height="80dp" />

            <TextView
                android:id="@+id/infoDistance"
                android:text="140\nm"
                android:gravity="center"
                android:textSize="14sp"
                android:background="@drawable/info_default"
                android:layout_marginStart="10dp"
                android:layout_width="80dp"
                android:layout_height="80dp" />

            <TextView
                android:id="@+id/infoTime"
                android:text="4\nphút"
                android:gravity="center"
                android:textSize="14sp"
                android:background="@drawable/info_default"
                android:layout_marginStart="10dp"
                android:layout_width="80dp"
                android:layout_height="80dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
