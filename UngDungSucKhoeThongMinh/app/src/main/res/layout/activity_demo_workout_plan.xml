<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Header -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_circle_button"
            android:src="@drawable/ic_back"
            android:contentDescription="Quay lại"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Theo dõi hoạt động"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1F1F1F"
            app:layout_constraintTop_toTopOf="@id/btnBack"
            app:layout_constraintBottom_toBottomOf="@id/btnBack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageButton
            android:id="@+id/btnMenu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_circle_button"
            android:src="@drawable/ic_menu"
            android:contentDescription="Menu"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Today Target Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardTodayTarget"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#E8E8FF"
            app:layout_constraintTop_toBottomOf="@id/btnBack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Header Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Mục tiêu hôm nay"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1F1F1F"/>

                    <ImageView
                        android:id="@+id/btnEditTarget"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:padding="6dp"
                        android:background="@drawable/bg_circle_button_small"
                        android:src="@drawable/ic_edit"
                        android:contentDescription="Chỉnh sửa"/>

                </LinearLayout>

                <!-- Target Items Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <!-- Water Intake -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="8dp"
                        android:background="@drawable/bg_target_item">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_water"
                            android:contentDescription="Nước"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:id="@+id/tvWaterValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="8L"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#5B5BFF"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Uống nước"
                                android:textSize="11sp"
                                android:textColor="#7E7E7E"/>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Foot Steps -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="8dp"
                        android:layout_marginStart="12dp"
                        android:background="@drawable/bg_target_item">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_footsteps"
                            android:contentDescription="Bước chân"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:id="@+id/tvStepsValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2400"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#FFA726"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bước chân"
                                android:textSize="11sp"
                                android:textColor="#7E7E7E"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Activity Progress Section -->
        <LinearLayout
            android:id="@+id/layoutActivityProgress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/cardTodayTarget"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Header Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tiến độ hoạt động"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1F1F1F"/>

                <TextView
                    android:id="@+id/btnWeekly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xem chi tiết"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/bg_button_weekly"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:drawablePadding="4dp"/>

            </LinearLayout>

            <!-- Chart Container -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="bottom">

                    <!-- Sun -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <View
                            android:layout_width="20dp"
                            android:layout_height="60dp"
                            android:background="@drawable/bg_chart_bar_purple"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sun"
                            android:textSize="11sp"
                            android:textColor="#9E9E9E"/>
                    </LinearLayout>

                    <!-- Mon -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <View
                            android:layout_width="20dp"
                            android:layout_height="100dp"
                            android:background="@drawable/bg_chart_bar_purple"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mon"
                            android:textSize="11sp"
                            android:textColor="#9E9E9E"/>
                    </LinearLayout>

                    <!-- Tue -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <View
                            android:layout_width="20dp"
                            android:layout_height="70dp"
                            android:background="@drawable/bg_chart_bar_blue"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tue"
                            android:textSize="11sp"
                            android:textColor="#9E9E9E"/>
                    </LinearLayout>

                    <!-- Wed -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <View
                            android:layout_width="20dp"
                            android:layout_height="95dp"
                            android:background="@drawable/bg_chart_bar_purple"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wed"
                            android:textSize="11sp"
                            android:textColor="#9E9E9E"/>
                    </LinearLayout>

                    <!-- Thu -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <View
                            android:layout_width="20dp"
                            android:layout_height="120dp"
                            android:background="@drawable/bg_chart_bar_blue"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thu"
                            android:textSize="11sp"
                            android:textColor="#9E9E9E"/>
                    </LinearLayout>

                    <!-- Fri -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <View
                            android:layout_width="20dp"
                            android:layout_height="50dp"
                            android:background="@drawable/bg_chart_bar_purple"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fri"
                            android:textSize="11sp"
                            android:textColor="#9E9E9E"/>
                    </LinearLayout>

                    <!-- Sat -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <View
                            android:layout_width="20dp"
                            android:layout_height="110dp"
                            android:background="@drawable/bg_chart_bar_blue"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sat"
                            android:textSize="11sp"
                            android:textColor="#9E9E9E"/>
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Latest Activity Section -->
        <LinearLayout
            android:id="@+id/layoutLatestActivity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/layoutActivityProgress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Header Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Hoạt động gần đây"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1F1F1F"/>

                <TextView
                    android:id="@+id/btnSeeMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xem thêm"
                    android:textSize="12sp"
                    android:textColor="#5B5BFF"/>

            </LinearLayout>

            <!-- Activity Item 1: Drinking Water -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_water_activity"
                        android:background="@drawable/bg_circle_pink"
                        android:padding="12dp"
                        android:contentDescription="Uống nước"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Uống 300ml nước"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#1F1F1F"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Khoảng 3 phút trước"
                            android:textSize="12sp"
                            android:textColor="#9E9E9E"
                            android:layout_marginTop="2dp"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_more_vert"
                        android:contentDescription="Tùy chọn"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Activity Item 2: Eat Snack -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_snack"
                        android:background="@drawable/bg_circle_orange"
                        android:padding="12dp"
                        android:contentDescription="Ăn vặt"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ăn đồ ăn vặt (Fiber)"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#1F1F1F"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Khoảng 3h trước"
                            android:textSize="12sp"
                            android:textColor="#9E9E9E"
                            android:layout_marginTop="2dp"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_more_vert"
                        android:contentDescription="Tùy chọn"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>