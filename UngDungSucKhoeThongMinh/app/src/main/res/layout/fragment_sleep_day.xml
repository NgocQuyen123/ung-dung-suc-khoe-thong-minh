<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ScrollView chứa các card -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="25dp">

                <ImageButton
                    android:id="@+id/btnPrevDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/chevron_left"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Ngày trước"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/txtDayInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hôm nay"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <ImageButton
                    android:id="@+id/btnNextDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/chevron_right"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Ngày sau"/>
            </LinearLayout>

            <!-- Nửa vòng tròn + nội dung -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="16dp">

                <!-- Vòng cung -->
                <admin.example.ungdungsuckhoethongminh.view.HalfCircleView
                    android:id="@+id/recoveryArc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <!-- Nội dung nằm giữa vòng cung -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txtRecoveryPercent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="39%"
                        android:textSize="48sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chỉ số hồi phục"
                        android:textColor="#777"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tệ"
                        android:textColor="#D32F2F"
                        android:textSize="16sp" />
                </LinearLayout>

            </FrameLayout>

            <!-- CARD: Thời gian ngủ & Mục tiêu -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="20dp">

                <!-- Thời gian ngủ -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="16dp"
                    android:background="@drawable/card_bg"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thời gian ngủ"
                        android:textSize="14sp"
                        android:textColor="#555" />

                    <TextView
                        android:id="@+id/txtSleepDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4g 42p"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginTop="6dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rất ngắn"
                        android:textColor="#D32F2F"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Mục tiêu giấc ngủ -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="16dp"
                    android:background="@drawable/card_bg"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mục tiêu giấc ngủ"
                        android:textSize="14sp"
                        android:textColor="#555" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8g 35p"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginTop="6dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chưa đạt mục tiêu"
                        android:textColor="#D32F2F"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- GIỜ NGỦ – GIỜ THỨC DẬY -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="20dp">

                <!-- Giờ ngủ -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="16dp"
                    android:background="@drawable/card_bg"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giờ ngủ" />

                    <TextView
                        android:id="@+id/txtBedtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1:13"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginTop="6dp" />
                </LinearLayout>

                <!-- Giờ thức dậy -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="16dp"
                    android:background="@drawable/card_bg"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giờ thức dậy" />

                    <TextView
                        android:id="@+id/txtWakeTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6:11"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginTop="6dp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>
