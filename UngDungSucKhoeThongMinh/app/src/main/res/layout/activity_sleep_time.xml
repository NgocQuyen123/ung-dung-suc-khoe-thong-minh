<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#17182D">

    <!-- Nút đóng -->

    <!-- Panel trắng -->

    <ImageView
        android:id="@+id/imgClose"
        android:layout_width="41dp"
        android:layout_height="45dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="16dp"
        android:background="#FFFFFF"

        android:src="@drawable/close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomPanel"
        android:layout_width="380dp"
        android:layout_height="536dp"
        android:layout_margin="16dp"
        android:background="@drawable/rounded_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Thời gian ngủ"
            android:textColor="#000000"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Thời lượng ngủ -->


        <!-- Tên các mức trên thanh màu -->

        <TextView
            android:id="@+id/txtSleepTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text=" · Rất ngắn"
            android:textColor="#E53935"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.576"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtTitle" />

        <TextView
            android:id="@+id/txtSleepTime1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="4g 42p"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.358"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtTitle" />

        <LinearLayout
            android:id="@+id/labelAbove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/txtSleepTime"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="Rất\nngắn"
                android:gravity="center"
                android:textSize="10sp"
                android:textColor="#666666" />

            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Ngắn"
                android:gravity="center"
                android:textSize="10sp"
                android:textColor="#666666" />

            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Vừa phải"
                android:gravity="center"
                android:textSize="10sp"
                android:textColor="#666666" />

            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Lý tưởng"
                android:gravity="center"
                android:textSize="10sp"
                android:textColor="#666666" />

            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Ngủ quá\nnhiều"
                android:gravity="center"
                android:textSize="10sp"
                android:textColor="#666666" />
        </LinearLayout>

        <!-- Thanh màu -->
        <LinearLayout
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/labelAbove"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <View
                android:layout_width="40dp"
                android:layout_height="10dp"
                android:background="#FF4E4E" />

            <View
                android:layout_width="40dp"
                android:layout_height="10dp"
                android:layout_marginStart="8dp"
                android:background="#FFA726" />

            <View
                android:layout_width="40dp"
                android:layout_height="10dp"
                android:layout_marginStart="8dp"
                android:background="#FFCC00" />

            <View
                android:layout_width="40dp"
                android:layout_height="10dp"
                android:layout_marginStart="8dp"
                android:background="#4CAF50" />

            <View
                android:layout_width="40dp"
                android:layout_height="10dp"
                android:layout_marginStart="8dp"
                android:background="#03A9F4" />
        </LinearLayout>

        <!-- Các con số dưới thanh màu -->
        <LinearLayout
            android:id="@+id/labelLevels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/ratingBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:text="5"
                android:textColor="#808080"
                android:textSize="13sp" />

            <TextView
                android:layout_width="38dp"
                android:layout_height="32dp"
                android:text="   6"
                android:textColor="#808080"
                android:textSize="13sp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="32dp"
                android:text="   7"
                android:textColor="#808080"
                android:textSize="13sp" />

            <TextView
                android:layout_width="53dp"
                android:layout_height="match_parent"
                android:text="   9"
                android:textColor="#808080"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:id="@+id/dividerTop"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/labelLevels"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Nguồn -->
        <TextView
            android:id="@+id/txtSource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nguồn: National Sleep Foundation"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/dividerTop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Mô tả -->

        <TextView
            android:id="@+id/txttieude"
            android:layout_width="306dp"
            android:layout_height="32dp"
            android:layout_margin="16dp"
            android:layout_marginTop="56dp"
            android:text="Cách tính toán như thế nào?"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtSource"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/txtDescription"
            android:layout_width="305dp"
            android:layout_height="77dp"
            android:layout_margin="16dp"
            android:layout_marginTop="56dp"
            android:text="Chúng tôi sẽ tự động tính toán thời gian ngủ của bạn dựa trên hoạt động của điện thoại..."
            android:textColor="#333333"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtSource"
            app:layout_constraintVertical_bias="0.162" />

        <TextView
            android:id="@+id/txttieude2"
            android:layout_width="308dp"
            android:layout_height="28dp"
            android:layout_margin="16dp"
            android:layout_marginTop="56dp"
            android:text="Khoảng thời gian ngủ lý tưởng"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.486"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtSource"
            app:layout_constraintVertical_bias="0.578" />

        <TextView
            android:id="@+id/txtDescription2"
            android:layout_width="305dp"
            android:layout_height="77dp"
            android:layout_margin="16dp"
            android:layout_marginTop="56dp"
            android:text="7-9h là khoảng thời gian ý tưởng người trưởng thành để cảm thấy tỉnh táo và hoạt động tốt trong ngày."
            android:textColor="#333333"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.48"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtSource"
            app:layout_constraintVertical_bias="0.891" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
