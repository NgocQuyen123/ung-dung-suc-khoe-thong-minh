<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Vòng tròn nền xám -->
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="10dp"
                android:color="#D9D9D9" />
        </shape>
    </item>

    <!-- Vòng tròn tiến độ màu xanh -->
    <item>
        <rotate
            android:fromDegrees="-90"
            android:toDegrees="0">
            <shape android:shape="oval">
                <stroke
                    android:width="18dp"
                    android:color="#7CB685" />
            </shape>
        </rotate>
    </item>

</layer-list>
