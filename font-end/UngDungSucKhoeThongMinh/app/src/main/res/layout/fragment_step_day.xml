<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Nút chuyển ngày -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp">

            <ImageButton
                android:id="@+id/btnPrevDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/chevron_left"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Ngày trước"/>

            <!-- Khoảng cách trước TextView -->
            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/txtDayInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/steps_today"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <!-- Khoảng cách sau TextView -->
            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/btnNextDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/chevron_right"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Ngày sau"/>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/flCircle"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/imgCircle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/circle_progress"
                android:contentDescription="Vòng tròn bước chân"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/imgCenterIcon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/buocchan"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/txtCenterTop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/txtCenterBottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/steps_unit_steps"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

            </LinearLayout>
        </FrameLayout>

        <!-- Các ô nhỏ: bước, calo, quãng đường, thời gian -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp">

            <!-- Bước -->
            <TextView
                android:id="@+id/txtSmallSteps"
                android:layout_width="0dp"
                android:layout_height="96dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingVertical="10dp"
                android:text="0\nbước"
                android:textSize="13sp"
                android:textStyle="bold"
                android:lineSpacingExtra="2dp"
                android:background="@drawable/card_bg_colored"
                android:drawableTop="@drawable/circle_icon_bg"
                android:drawablePadding="6dp"/>


            <!-- Calo -->
            <TextView
                android:id="@+id/txtSmallCalories"
                android:layout_width="0dp"
                android:layout_height="96dp"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:paddingVertical="10dp"
                android:text="0\nkcal"
                android:textSize="13sp"
                android:textStyle="bold"
                android:lineSpacingExtra="2dp"
                android:background="@drawable/card_bg_colored"
                android:drawableTop="@drawable/circle_icon_fire"
                android:drawablePadding="6dp"/>


            <!-- Quãng đường -->
            <TextView
                android:id="@+id/txtSmallDistance"
                android:layout_width="0dp"
                android:layout_height="96dp"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:paddingVertical="10dp"
                android:text="0 m"
                android:textSize="13sp"
                android:textStyle="bold"
                android:lineSpacingExtra="2dp"
                android:background="@drawable/card_bg_colored"
                android:drawableTop="@drawable/circle_icon_arrow"
                android:drawablePadding="6dp"/>


            <!-- Thời gian -->
            <TextView
                android:id="@+id/txtSmallTime"
                android:layout_width="0dp"
                android:layout_height="96dp"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:paddingVertical="10dp"
                android:text="0\nphút"
                android:textSize="13sp"
                android:textStyle="bold"
                android:lineSpacingExtra="2dp"
                android:background="@drawable/card_bg_colored"
                android:drawableTop="@drawable/circle_icon_clock"
                android:drawablePadding="6dp"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
