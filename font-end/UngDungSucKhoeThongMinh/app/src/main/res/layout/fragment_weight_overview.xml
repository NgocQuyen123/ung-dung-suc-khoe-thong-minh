<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:paddingHorizontal="16dp">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="24dp"
            android:clickable="true"
            android:contentDescription="Quay lại"
            android:focusable="true"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Cân nặng"
            android:textColor="@android:color/black"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivBack"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/llTabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_rounded_progress"
            android:backgroundTint="#E9E8EE"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitle">

            <Button
                android:id="@+id/btnTabWeek"
                style="@style/MyFlatButton"
                android:layout_width="121dp"
                android:layout_height="52dp"
                android:background="@drawable/btn_next"
                android:paddingHorizontal="16dp"
                android:text="TUẦN"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnTabMonth"
                android:layout_width="121dp"
                android:layout_height="52dp"
                android:background="@android:color/transparent"
                android:paddingHorizontal="16dp"
                android:text="THÁNG"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnTabYear"
                android:layout_width="121dp"
                android:layout_height="52dp"
                android:background="@android:color/transparent"
                android:paddingHorizontal="16dp"
                android:text="NĂM"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clWeekSummary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/llTabs">

            <ImageView
                android:id="@+id/ivPrevWeek"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="Tuần trước"
                android:rotation="180"
                android:src="@drawable/ic_arrow_forward"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvWeekLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Tuần này"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/ivPrevWeek"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivNextWeek"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="Tuần sau"
                android:src="@drawable/ic_arrow_forward"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/tvAverageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TRUNG BÌNH TUẦN"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/clWeekSummary"/>

        <TextView
            android:id="@+id/tvAverageWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="65 kg"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvAverageTitle"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clWeightInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:background="@drawable/bg_rounded_progress"
            android:clickable="true"
            android:focusable="true"
            android:paddingVertical="8dp"
            android:paddingStart="12dp"
            android:paddingEnd="4dp"
            app:layout_constraintBottom_toBottomOf="@id/tvAverageWeight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvAverageTitle">

            <ImageView
                android:id="@+id/ivFlag"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:contentDescription="Cờ chỉ mục tiêu"
                android:src="@drawable/laco"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvCurrentWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/ivFlag"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="60 kg" />

            <ImageView
                android:id="@+id/ivArrowWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:contentDescription="Mũi tên"
                android:src="@drawable/ic_arrow_forward"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvCurrentWeight"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:id="@+id/llDays"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:weightSum="7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvAverageWeight">

            <TextView style="@style/DayLabel" android:text="T2" android:layout_weight="1"/>
            <TextView style="@style/DayLabel" android:text="T3" android:layout_weight="1"/>
            <TextView style="@style/DayLabel" android:text="T4" android:layout_weight="1"/>
            <TextView style="@style/DayLabel" android:text="T5" android:layout_weight="1"/>
            <TextView style="@style/DayLabel" android:text="T6" android:layout_weight="1"/>
            <TextView style="@style/DayLabel" android:text="T7" android:layout_weight="1"/>
            <TextView style="@style/DayLabel" android:text="CN" android:layout_weight="1"/>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/chart_container"
            android:layout_width="0dp"
            android:layout_height="250dp" android:layout_marginTop="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/llDays">

            <View
                android:layout_width="380dp"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:background="#E8F5E9" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/llBmiCardsContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chart_container">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clBmiCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_weight="0.8"
                android:background="@drawable/bg_rounded_progress"
                android:backgroundTint="#F7F8FC"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvBmiValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@android:color/black"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView3"
                    tools:text="22.5" />

                <TextView
                    android:id="@+id/tvBmiLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BMI"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvBmiValue" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/accessibility"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clBodyScanCard"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.3" android:background="@drawable/bg_rounded_progress"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/ivBodyScanIcon"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_body_scan"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toEndOf="@id/ivBodyScanIcon"
                    app:layout_constraintEnd_toStartOf="@id/ivBodyScanArrow"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <TextView
                        android:id="@+id/tvBodyScanLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quét cơ thể"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đo lường và phân tích hơn 30 chỉ số cơ thể"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="16sp"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/ivBodyScanArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_forward"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tvFeaturedTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nổi bật"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/llBmiCardsContainer"/>

        <LinearLayout
            android:id="@+id/llFeaturedCards"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_rounded_progress"
            android:padding="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvFeaturedTitle">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hãy cùng xem lại Tỷ lệ Mỡ Cơ Thể (BF%) và Chỉ Số Khối Lượng Cơ Thể (BMI) gần đây của bạn trong tuần này."
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="BF% - Không có giá trị nào"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="16sp"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>