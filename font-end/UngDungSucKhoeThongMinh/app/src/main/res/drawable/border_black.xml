
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Màu viền -->
    <stroke
        android:width="2dp"
        android:color="#000000" />

    <!-- Góc bo nếu muốn -->
    <corners android:radius="15dp" />

    <!-- Màu nền trong suốt hoặc trắng -->
    <solid android:color="#FFFFFF" /> <!-- hoặc #00FFFFFF nếu muốn trong suốt -->

    <solid android:color="@android:color/transparent" />

    <stroke
        android:width="2dp"
        android:color="#CFCFCF"/>
    <corners android:radius="12dp" />

    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>


