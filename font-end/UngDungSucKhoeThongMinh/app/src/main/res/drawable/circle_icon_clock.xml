        <shape android:shape="oval">
            <solid android:color="#FFFFFF"/>
        </shape>
    </item>

    <!-- Icon đồng hồ -->
    <item android:gravity="center">
        <bitmap
            android:src="@drawable/mdi_light_clock"
            android:gravity="center"/>
    </item>

</layer-list>
